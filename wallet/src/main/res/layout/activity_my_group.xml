<?xml version="1.0" encoding="utf-8"?>
<share.exchange.framework.widget.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mine_my_group"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_group_node"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_red_circle_corners"
                android:gravity="center"
                android:text="@string/group_node_one"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_corners"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <share.exchange.framework.widget.AutoSizeTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/group_persional_join_earning"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp"/>

                <share.exchange.framework.widget.AutoSizeTextView
                    android:id="@+id/tv_group_persion_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_corners"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <share.exchange.framework.widget.AutoSizeTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/group_node_total_earning"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp"/>

                <share.exchange.framework.widget.AutoSizeTextView
                    android:id="@+id/tv_node_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_corners"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <share.exchange.framework.widget.AutoSizeTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/group_tui_total_earning"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp"/>

                <share.exchange.framework.widget.AutoSizeTextView
                    android:id="@+id/tv_tuiguang_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gray_corners"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <share.exchange.framework.widget.AutoSizeTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/group_total_earning_usdt"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp"/>

                <share.exchange.framework.widget.AutoSizeTextView
                    android:id="@+id/tv_group_total_usdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/group_friend"
            android:textColor="@color/color_black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <share.exchange.framework.widget.AutoSizeTextView
                android:id="@+id/tv_group_my_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <share.exchange.framework.widget.AutoSizeTextView
                android:id="@+id/tv_group_look_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/shequn_icon_dakai"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:text="@string/group_look_friend"
                android:textColor="@color/color_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <share.exchange.framework.widget.AutoSizeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/group_today_earning"
                android:textColor="@color/color_696969"
                android:textSize="12sp"/>

            <share.exchange.framework.widget.AutoSizeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/group_friend"
                android:textColor="@color/color_696969"
                android:textSize="12sp"/>

            <share.exchange.framework.widget.AutoSizeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/group_total_award"
                android:textColor="@color/color_696969"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <share.exchange.framework.widget.AutoSizeTextView
                android:id="@+id/tv_group_today_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="16sp"/>

            <share.exchange.framework.widget.AutoSizeTextView
                android:id="@+id/tv_group_total_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="16sp"/>

            <share.exchange.framework.widget.AutoSizeTextView
                android:id="@+id/tv_group_total_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="--"
                android:textColor="@color/color_black"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="@string/group_earning_info"
            android:textColor="@color/color_black"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_line"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_empty"/>

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/rv_group_earning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_line"/>

    </LinearLayout>

</share.exchange.framework.widget.MyScrollView>