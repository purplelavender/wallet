<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <share.exchange.framework.widget.CircleImageView
        android:id="@+id/iv_record_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_whitegray_circle_corners"
        android:scaleType="centerInside"
        android:src="@drawable/icon_zhuanchu"/>

    <share.exchange.framework.widget.AutoSizeTextView
        android:id="@+id/tv_record_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:text="--"
        android:textColor="@color/color_black"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_record_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/color_black"
            android:textSize="16sp"/>

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_record_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/color_696969"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>