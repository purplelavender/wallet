<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_financial_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_financial_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**"
            android:textColor="@color/color_696969"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_financial_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="**"
            android:textColor="@color/color_black"
            android:textSize="16sp"/>

        <share.exchange.framework.widget.AutoSizeTextView
            android:id="@+id/tv_financial_amount_hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="**"
            android:textColor="@color/color_green"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_jinru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/shequn_icon_dakai"/>

</LinearLayout>