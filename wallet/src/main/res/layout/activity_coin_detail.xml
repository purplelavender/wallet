<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <share.exchange.framework.widget.CircleImageView
        android:id="@+id/iv_coin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/wode_touxiang"/>

    <TextView
        android:id="@+id/tv_coin_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="--"
        android:textSize="20sp"
        android:textColor="@color/color_black"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_coin_amount_usdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="--"
        android:textSize="14sp"
        android:textColor="@color/color_04041D"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/tab_selected_color"
        app:tabTextColor="@color/color_696969"
        app:tabIndicatorColor="@color/tab_selected_color"/>

    <share.exchange.framework.widget.HackyViewPager
        android:id="@+id/vp_amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_green_corners"
            android:text="@string/wallet_gathering"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/bg_red_corners"
            android:text="@string/wallet_transfer"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="10dp"/>

    </LinearLayout>
    
</LinearLayout>