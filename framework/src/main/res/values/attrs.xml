<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 加载状态布局 -->
    <declare-styleable name="stateLayout_state">
        <attr name="state_loading" format="integer"/>
        <attr name="state_error" format="integer"/>
        <attr name="state_empty" format="integer"/>
        <attr name="state_login" format="integer"/>
        <attr name="state_succes" format="integer"/>
    </declare-styleable>

    <integer name="state_loading_value">0</integer>
    <integer name="state_error_value">1</integer>
    <integer name="state_empty_value">2</integer>
    <integer name="state_login_value">3</integer>
    <integer name="state_succes_value">4</integer>

    <declare-styleable name="stateLayout_state_success">
        <attr name="stateLayout_state_success_layout" format="reference"/>
    </declare-styleable>

    <!-- 密码输入框 -->
    <declare-styleable name="PswText">
        <!--密码长度-->
        <attr name="pswLength" format="integer"/>
        <!--密码框颜色-->
        <attr name="borderColor" format="color"/>
        <!--密码颜色-->
        <attr name="pswColor" format="color"/>
        <!--输入时密码框颜色-->
        <attr name="inputBorder_color" format="color"/>
        <!--输入时密码框阴影颜色-->
        <attr name="borderShadow_color" format="color"/>
        <!--明文密码文字大小-->
        <attr name="psw_textSize" format="dimension"/>
        <!--密码框圆角程度-->
        <attr name="borderRadius" format="dimension"/>
        <!--是否使用图片绘制密码框-->
        <attr name="isDrawBorderImg" format="boolean"/>
        <!--按back键时，是否需要绘制明文密码-->
        <attr name="isShowTextPsw" format="boolean"/>
        <!--输入密码时密码框是否有阴影-->
        <attr name="isShowBorderShadow" format="boolean"/>
        <!--密码框图片-->
        <attr name="borderImg" format="reference"/>
        <!--输入时变化的密码框图片-->
        <attr name="inputBorderImg" format="reference"/>
        <!--延迟绘制密码圆点的时间,1000 = 1s-->
        <attr name="delayTime" format="integer"/>
        <!--是否只绘制明文密码-->
        <attr name="clearTextPsw" format="boolean"/>
        <!--是否只绘制圆点-->
        <attr name="darkPsw" format="boolean"/>
        <!--是否在输入密码时不更改密码框颜色-->
        <attr name="isChangeBorder" format="boolean"/>
    </declare-styleable>

    <!-- 公告栏跑马灯 -->
    <declare-styleable name="NoticeView">
        <attr name="isSetAnimDuration" format="boolean"/>
        <attr name="isSingleLine" format="boolean"/>
        <attr name="marquee_interval" format="integer|reference"/>
        <attr name="marquee_animDuration" format="integer|reference"/>
        <attr name="marquee_textSize" format="dimension|reference"/>
        <attr name="marquee_textColor" format="color|reference"/>
        <attr name="wo_textColor" format="color|reference"/>
    </declare-styleable>

    <!-- for CircleImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="center" value="2"></enum>
        </attr>
        <attr name="horizontal_Space" format="dimension"></attr>
        <attr name="vertical_Space" format="dimension"></attr>
        <attr name="isFull" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="cropMaskColor" format="color"/>
        <attr name="cropBorderColor" format="color"/>
        <attr name="cropBorderWidth" format="dimension"/>
        <attr name="cropFocusWidth" format="dimension"/>
        <attr name="cropFocusHeight" format="dimension"/>
        <attr name="cropStyle" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>
</resources>